@model Template.BL.Models.DepartmentVM


@{
    ViewData["Title"] = "Edit";
}

<a asp-controller="Department" asp-action="Index" class="btn btn-primary">Back To Data</a>
<a asp-controller="Department" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">Details</a>

<br />
<br />

<h2>Edit</h2>


<form asp-controller="Department" asp-action="Edit" class="form-group">

    <div asp-validation-summary="All" class="text-danger validationSummary"></div>


    <label asp-for="DepartmentName">Department Name</label>
    <input type="text" class="form-control" asp-for="DepartmentName" />
    <span asp-validation-for="DepartmentName" class="text-danger"></span>
    <br />

    <label asp-for="DepartmentCode">Department Code</label>
    <input type="text" class="form-control" asp-for="DepartmentCode" />
    <span asp-validation-for="DepartmentCode" class="text-danger"></span>
    <br />

    <center>
        <input type="submit" class="btn btn-primary" value="Save" />
        <input type="reset" class="btn btn-danger" value="Clare" />
    </center>

</form>


@section MicrosoftValidation{
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

@section Summary {
    <script>
        setTimeout(function () { $('.validationSummary').fadeOut(); }, 2000);
    </script>
}

