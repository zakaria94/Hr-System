@model List<Template.BL.Models.UserInRoleVM>

@{
    ViewData["Title"] = "Add Or Remove Users";
    var RoleId = ViewBag.RoleId;
    var RoleName = ViewBag.RoleName;
}

<form method="post" class="form-group">

    <div class="card-header">
        <h2>Add Or Remove User In @RoleName Role</h2>
    </div>


    @for (int i = 0; i < Model.Count; i++)
    {

        <input asp-for="@Model[i].IsSelected" type="checkbox" class="filled-in">
        <label asp-for="@Model[i].IsSelected">@Model[i].Email</label>
        <br />

        <input type="hidden" asp-for="@Model[i].UserId" />
        <input type="hidden" asp-for="@Model[i].UserName" />

    }

    <div class="card-footer">
        <input type="submit" value="Edit" class="btn btn-primary" />
    </div>


</form>

<a asp-controller="Roles" asp-action="Update" asp-route-id="@RoleId" class="btn btn-danger">Cancle</a>

